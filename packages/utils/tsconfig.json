{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "~utils/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
