{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "paths": {
      "~cli/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
